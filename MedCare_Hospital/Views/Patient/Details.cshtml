@model MedCare_Hospital.Data.ViewModels.PatientMedicalRecord

<h2>Patient Details</h2>

<table class="table">
    <tbody>
        <tr>
            <td><strong>Patient ID:</strong></td>
            <td>@Model.Patient.PatientId</td>
        </tr>
        <tr>
            <td><strong>Name:</strong></td>
            <td>@Model.Patient.Name</td>
        </tr>
        <tr>
            <td><strong>Date Of Birth:</strong></td>
            <td>@Model.Patient.DateOfBirth</td>
        </tr>
        <tr>
            <td><strong>Age:</strong></td>
            <td>@Model.Patient.Age</td>
        </tr>
        <tr>
            <td><strong>Gender:</strong></td>
            <td>@Model.Patient.Gender</td>
        </tr>
        <tr>
            <td><strong>Contact:</strong></td>
            <td>@Model.Patient.Contact</td>
        </tr>
        <tr>
            <td><strong>Diagnosis:</strong></td>
            <td>@Model.MedicalRecord.Diagnosis</td>
        </tr>
        <tr>
            <td><strong>Treatment:</strong></td>
            <td>@Model.MedicalRecord.Treatment</td>
        </tr>
        <tr>
            <td><strong>Medication:</strong></td>
            <td>@Model.MedicalRecord.Medication</td>
        </tr>
        <tr>
            <td><strong>LabResult:</strong></td>
            <td>@Model.MedicalRecord.LabResult</td>
        </tr>
        <tr>
            <td><strong>History:</strong></td>
            <td>@Model.MedicalRecord.History</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-outline-secondary" asp-controller="Patient" asp-action="Index">Back to List</a>
<a class="btn btn-outline-secondary" asp-controller="MedicalRecord" asp-action="Index">Show Medical Record</a>

