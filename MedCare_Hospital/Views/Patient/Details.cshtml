@model MyHospital_MVC.Models.Patient

<h2>Patient Details</h2>

<table class="table">
    <tbody>
        <tr>
            <td><strong>Patient ID:</strong></td>
            <td>@Model.PatientId</td>
        </tr>
        <tr>
            <td><strong>Name:</strong></td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td><strong>Date Of Birth:</strong></td>
            <td>@Model.DateOfBirth</td>
        </tr>
        <tr>
            <td><strong>Age:</strong></td>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <td><strong>Gender:</strong></td>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <td><strong>Contact:</strong></td>
            <td>@Model.Contact</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-outline-secondary" asp-controller="Patient" asp-action="Index">Back to List</a>
