@model IEnumerable<MyHospital_MVC.Models.Appointment>
<!DOCTYPE html>
<h1>Appointments</h1>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Appointment Date</th>
            <th>Reason</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentId</td>
                <td>@appointment.AppointmentDate</td>
                <td>@appointment.Reason</td>
                <td class="align-middle">
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@appointment.AppointmentId">
                        <i class="bi bi-pencil-square"></i>Details
                    </a>
                    <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@appointment.AppointmentId"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@appointment.AppointmentId"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Appointment" asp-action="Create" class="btn btn-outline-success">Add New Appointment</a>
