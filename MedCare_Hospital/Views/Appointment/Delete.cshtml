@model MyHospital_MVC.Models.Appointment

<html>
<head>
    <style>
        body {
            background-color: #61d1c5;
            font-family: 'Times New Roman', Times, serif;
        }

        .delete-img {
            margin-top: 100px;
        }

        .content-delete {
            background-color: #fff;
            border-radius: 10px;
            font-size: 18px;
            opacity: 90%;
            height: 380px;
            width: 500px;
            padding: 25px 25px;
            padding-left: 55px;
            margin-top: 75px;
            margin-left: 100px;
        }

        .btn-index {
            font-size: 20px;
            background-color: #fff;
            border: 2px solid #0097a7;
            color: #0097a7;
            padding-left: 10px;
            padding-right: 10px;
        }

        .delete-button {
            background-color: red;
            border: none;
            color: white;
            font-size: 20px;
            padding: 8px 8px;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="row text">
        <div class="row">
            <div class="col-md-6 delete-img">
                <img src="https://media.istockphoto.com/id/1365852400/vector/businessman-hand-throw-file-to-trash-vector.jpg?s=612x612&w=0&k=20&c=0pYHZG7hEUVQ9imOzoOGOGfPRTvQ5wqdLKcfOsVeJjI=" alt="delete" class="img-fluid right-image">
            </div>
            <div class="col-md-6 content-delete">
                <h2>Delete Appointment</h2>
                <p>Are you sure you want to delete this Appointment?</p>
                <form asp-action="Delete">
                    <dl class="row">
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd class="col-sm-4">
                            @Html.DisplayFor(model => model.Date)
                        </dd>
                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.Reason)
                        </dt>
                        <dd class="col-sm-4">
                            @Html.DisplayFor(model => model.Reason)
                        </dd>

                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.PatientId)
                        </dt>
                        <dd class="col-sm-4">
                            @Html.DisplayFor(model => model.PatientId)
                        </dd>

                        <dt class="col-sm-6">
                            @Html.DisplayNameFor(model => model.HealthcareProviderId)
                        </dt>
                        <dd class="col-sm-4">
                            @Html.DisplayFor(model => model.HealthcareProviderId)
                        </dd>
                    </dl>
                    <div class="form-group">
                        <input type="hidden" asp-id="Id" />
                        <input type="submit" value="Confirm" class="btn delete-button float-right" asp-action="Delete" />
                        <a class="btn btn-index" asp-action="Index">Show All Appointments</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>