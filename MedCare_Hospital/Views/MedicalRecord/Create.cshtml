@model MyHospital_MVC.Models.MedicalRecord

<h2>Create MedicalRecord</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Diagnosis">Diagnosis</label>
        <input asp-for="Diagnosis" class="form-control" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Treatment">Treatment</label>
        <input asp-for="Treatment" class="form-control" />
        <span asp-validation-for="Treatment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Medication">Medication</label>
        <input asp-for="Medication" class="form-control" />
        <span asp-validation-for="Medication" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LabResult">Laboratory Result</label>
        <input asp-for="LabResult" class="form-control" />
        <span asp-validation-for="LabResult" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="History">History</label>
        <input asp-for="History" class="form-control" />
        <span asp-validation-for="History" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientId">Id of the patient</label>
        <input asp-for="PatientId" class="form-control" />
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-outline-success float-right" asp-action="Create" />
</form>
