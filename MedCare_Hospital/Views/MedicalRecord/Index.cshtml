@model IEnumerable<MyHospital_MVC.Models.MedicalRecord>
<!DOCTYPE html>
<h1>MedicalRecords</h1>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Diagnosis</th>
            <th>Treatment</th>
            <th>Medication</th>
            <th>LabResult</th>
            <th>History</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var medicalRecord in Model)
        {
            <tr>
                <td>@medicalRecord.MedicalRecordId</td>
                <td>@medicalRecord.Diagnosis</td>
                <td>@medicalRecord.Treatment</td>
                <td>@medicalRecord.Medication</td>
                <td>@medicalRecord.LabResult</td>
                <td>@medicalRecord.History</td>
                <td class="align-middle">
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@medicalRecord.MedicalRecordId">
                        <i class="bi bi-pencil-square"></i>Details
                    </a>
                    <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@medicalRecord.MedicalRecordId"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@medicalRecord.MedicalRecordId"><i class="bi bi-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="MedicalRecord" asp-action="Create" class="btn btn-outline-success">Add New MedicalRecord</a>
