@model MyHospital_MVC.Models.MedicalRecord

<h2>Delete Medical Record</h2>

<p>Are you sure you want to delete this Medical Record?</p>

<form asp-action="Delete">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Diagnosis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Diagnosis)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Treatment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Treatment)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medication)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medication)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LabResult)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LabResult)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.History)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.History)
        </dd>
    </dl>
    <div class="form-group">
        <input type="hidden" asp-id="Id" />
        <input type="submit" value="Confirm" class="btn btn-outline-danger float-right" asp-action="Delete" />
        <a class="btn btn-outline-secondary" asp-action="Index">Show All Medical Records</a>
    </div>
</form>

