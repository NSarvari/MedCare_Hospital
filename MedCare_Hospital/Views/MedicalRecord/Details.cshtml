@model MedCare_Hospital.Data.ViewModels.PatientMedicalRecord

<html>
<head>
    <link rel="stylesheet" href="../../css/MedicalRecordDetails.css" />
</head>
<body>
    <div class="container-details">
        <h2 class="heading">Patient's Information</h2>
        <div class="content">
            @if (Model.Patient != null)
            {
                <table class="table">
                    <tbody>
                        <tr>
                            <td><strong>Name:</strong></td>
                            <td>@Model.Patient.Name</td>
                        </tr>
                        <tr>
                            <td><strong>Age:</strong></td>
                            <td>@Model.Patient.Age Years Old</td>
                        </tr>
                        <tr>
                            <td><strong>Date Of Birth:</strong></td>
                            <td>@Model.Patient.DateOfBirth</td>
                        </tr>
                        <tr>
                            <td><strong>Gender:</strong></td>
                            <td>@Model.Patient.Gender</td>
                        </tr>
                        <tr>
                            <td><strong>Contact:</strong></td>
                            <td>@Model.Patient.Contact</td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>
        <a class="btn btn-index" asp-controller="MedicalRecord" asp-action="Index">Back to List</a>
    </div>
</body>
</html>