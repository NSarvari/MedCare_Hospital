@model MedCare_Hospital.Data.ViewModels.PatientFeedback

<html>
<head>
    <link rel="stylesheet" href="../../css/FeedbackUpdate.css" />
</head>
<body>
    <h1>Edit Comment</h1>
    @using (Html.BeginForm("Update", "Feedback", FormMethod.Post))
    {
        <div class="form-group">
            <label asp-for="FeedbackText"> Add what you have in mind</label>
            <textarea asp-for="FeedbackText" placeholder="Write something.." style="height:200px"></textarea>
            <span asp-validation-for="FeedbackText" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PatientId">Patient Id</label>
            <input asp-for="PatientId" class="form-control" />
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="@Model.Feedback.FeedbackId" class="d-none" value="@Model.FeedbackId" />
            <input type="submit" value="Update" class="btn btn-update" asp-action="Update" />
            <a asp-action="Index" class="btn btn-index">Cancel</a>
        </div>
    }
</body>
</html>
