@model MedCare_Hospital.Data.ViewModels.PatientFeedback
<h2>Delete Feedback</h2>
<p>Are you sure you want to delete this comment?</p>
<form asp-action="Delete">
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.FeedbackText)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.FeedbackText)
        </dd>

        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.PatientName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.PatientName)
        </dd>
    </dl>
    <div class="form-group">
        <input type="hidden" asp-id="Id" />
        <input type="submit" value="Confirm" class="btn delete-button float-right" asp-action="Delete" />
        <a class="btn btn-index" asp-action="Index">Show All Comments</a>
    </div>
</form>
