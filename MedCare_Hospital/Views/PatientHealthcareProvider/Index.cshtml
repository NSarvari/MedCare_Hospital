@model IEnumerable<MyHospital_MVC.Models.PatientHealthcareProvider>
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-image: url('https://img.freepik.com/free-vector/abstract-medical-wallpaper-template-design_53876-61802.jpg?w=360');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }

        .heading {
            font-family: 'Times New Roman';
            font-size: 48px;
            font-weight: 900;
            text-align: center;
            margin-bottom: 25px;
        }

        .table-container {
            background-color: #fff;
            opacity: 75%;
            padding: 25px 25px;
        }

        .delete-button {
            background-color: red;
            border: none;
            color: white;
            font-family: 'Times New Roman', Times, serif;
            font-size: 15px;
            padding: 10px 15px;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin: 4px 2px;
            cursor: pointer;
        }

        .btn-create {
            background-color: #0097a7;
            border: 2px solid #fff;
            color: #fff;
            font-family: 'Arial Rounded MT';
            font-size: 15px;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            margin: 4px 2px;
            cursor: pointer;
        }

            .btn-create:hover {
                border: 2px solid black;
                background-color: white;
                color: #0097a7;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="table-container">
        <h1 class="heading">Patient and HealthcareProvider Relations</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Patient ID</th>
                    <th>Healthcare Provider ID</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patientHealthcareProvider in Model)
                {
                    <tr>
                        <td>@patientHealthcareProvider.PatientId</td>
                        <td>@patientHealthcareProvider.HealthcareProviderId</td>
                        <td class="align-middle">
                            <a class="btn delete-button" asp-action="Delete" asp-route-id="@patientHealthcareProvider.PatientId"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="PatientHealthcareProvider" asp-action="Create" class="btn btn-create">Add New Patient and Healthcare Provider Relation</a>
    </div>
</body>
</html>