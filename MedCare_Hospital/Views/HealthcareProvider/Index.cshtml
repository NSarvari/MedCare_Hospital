@model IEnumerable<MyHospital_MVC.Models.HealthcareProvider>
<!DOCTYPE html>
<h1 class="text-center">Healthcare Providers</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Photo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Speciality)</th>
                    <th>@Html.DisplayNameFor(model => model.Contact)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var healthcareProvider in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@healthcareProvider.Photo"
                                 alt="@healthcareProvider.Name" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => healthcareProvider.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => healthcareProvider.Speciality)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => healthcareProvider.Contact)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@healthcareProvider.HealthcareProviderId">
                                <i class="bi bi-pencil-square"></i>Details
                            </a>
                            <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@healthcareProvider.HealthcareProviderId"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@healthcareProvider.HealthcareProviderId"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-controller="HealthcareProvider" asp-action="Create" class="btn btn-outline-success">Add New Healthcare Provider</a>

</div>