@model MyHospital_MVC.Models.HealthcareProvider

<html>
<head>
    <link rel="stylesheet" href="../../css/HealthcareProviderDelete.css" />
</head>
<body>
    <div class="row text">
        <div class="row">
            <div class="col-md-6 delete-img">
                <img src="https://media.istockphoto.com/id/1365852400/vector/businessman-hand-throw-file-to-trash-vector.jpg?s=612x612&w=0&k=20&c=0pYHZG7hEUVQ9imOzoOGOGfPRTvQ5wqdLKcfOsVeJjI=" alt="delete" class="img-fluid right-image">
            </div>
            <div class="col-md-6 content-delete">
                <h2>Delete Healthcare Provider</h2>
                <p>Are you sure you want to delete this Healthcare Provider?</p>
                <form asp-action="Delete">
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Photo)
                        </dt>
                        <dd class="col-sm-6">
                            <img class="rounded-circle" src="@Url.Content(Model.Photo)" alt="@Model.Name" style="max-width:150px; float:left; margin-right:2000px" />
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Speciality)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Speciality)
                        </dd>

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Contact)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Contact)
                        </dd>
                    </dl>
                    <div class="form-group">
                        <input type="hidden" asp-id="Id" />
                        <input type="submit" value="Confirm" class="btn delete-button float-right" asp-action="Delete" />
                        <a class="btn btn-index" asp-action="Index">Show All Healthcare Providers</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>