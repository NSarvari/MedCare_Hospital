@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        div.polaroid {
            width: 800px;
            height: 530px;
            background-color: white;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            margin-bottom: 25px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        div.container {
            font-size: 24px;
            text-align: center;
            padding: 10px 20px;
        }
    </style>
</head>
<body>

    <h1 class="display-4">Welcome to the MedCare &#128147;</h1>
    @if (User.IsInRole("Patient"))
    {
        <a asp-controller="Appointment" asp-action="Create" class="btn btn-outline-success">Book New Appointment</a>
    }
    <a asp-controller="Survey" asp-action="Index" class="btn btn-outline-success">Take a Covid Survey</a>

    <div class="polaroid">
        <img src="https://qtxasset.com/quartz/qcloud5/media/image/Hospital%20surgery%20corridor.jpg?VersionId=IM4x7S3zWBkG5zoK9lB7J.gfM6ktY2wD" alt="5 Terre" style="width:100%">
        <div class="container">
            <p><strong>Let us take care of your health!</strong></p>
        </div>
    </div>

</body>
</html>



