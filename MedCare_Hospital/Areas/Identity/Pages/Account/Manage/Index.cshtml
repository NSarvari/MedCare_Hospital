@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<html>
<head>
    <style>
        input[type=text], [type=number], [type=tel] {
            width: 100%;
            padding: 12px 20px;
            margin: 12px 0;
            box-sizing: border-box;
            border: 2px solid #0097a7;
            border-radius: 4px;
        }

        .btn-create {
            font-family: 'Times New Roman', Times, serif;
            font-size: 20px;
            background-color: #0097a7;
            color: #fff;
            padding-left: 50px;
            padding-right: 50px;
            margin-top:25px;
        }

        img{
            width: 250px;
            height: 350px;
            border: 4px solid #0097a7;
            border-radius: 5px;
            padding: 5px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h3>@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="row">
        @if (!string.IsNullOrEmpty(Model.Input.ProfilePicture))
        {
            <div class="col-md-4">
                <img src="/uploads/@Model.Input.ProfilePicture" />
            </div>
        }
        <div class="col-md-6">
            <form id="profile-form" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Name" class="form-control" placeholder="Please enter your name." />
                    <label asp-for="Input.Name" class="form-label"></label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="m-2">
                    <label class="form-label" for="ProfilePicture">Profile Picture</label>
                    <input asp-for="Input.ImageFile" />
                </div>
                <button id="update-profile-button" type="submit" class="w-100 btn btn-create">Save</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
